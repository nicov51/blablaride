{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

       <div class="row mx-3">
          <div class="col">{{ form_row(registrationForm.email) }}</div>
          <div class ="col"> {{ form_row(registrationForm.plainPassword, {
            label: 'Password'}) }}
          </div>
       </div>

       <div class="row mx-3">
           <div class="col">{{ form_row(registrationForm.firstname) }}</div>
           <div class ="col">{{ form_row(registrationForm.lastname) }}</div>
       </div>

       <div class="row mx-3">
           <div class ='col'>{{ form_row(registrationForm.pseudo) }}</div>
           <div class = "col">{{ form_row(registrationForm.address) }}</div>
       </div>

       <div class="row mx-3">
            <div class ="col">{{ form_row(registrationForm.birthday) }}</div>
            <div class = "col">{{ form_row(registrationForm.mobilephone) }}</div>
       </div>

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">s'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
